.home-page {
  background: #fff;
}
.hero {
  width: 100%;
  height: 320rpx;
  display: block;
  background: #f5f5f5;
}
.card {
  margin: 24rpx;
  padding: 24rpx;
  border: 1px solid #eee;
  border-radius: 16rpx;
  background: #fff;
}
.card-title {
  font-size: 30rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
}
.grid {
  display: flex;
  flex-wrap: wrap;
}
.grid-item {
  width: 33.33%;
  padding: 24rpx 0;
  text-align: center;
}
.icon {
  width: 88rpx;
  height: 88rpx;
  margin: 0 auto 12rpx;
}
.label {
  font-size: 26rpx;
  color: #333;
}
.annc-list .annc-item {
  padding: 20rpx 0;
  border-bottom: 1px solid #f5f5f5;
}
.annc-title {
  font-size: 28rpx;
  margin-bottom: 6rpx;
}
.annc-time {
  font-size: 24rpx;
  color: #999;
}
.empty {
  text-align: center;
  color: #bbb;
  padding: 40rpx 0;
}
