.container {
  padding: 24rpx;
  background: #f6f7f9;
  min-height: 100vh;
}

.card {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.03);
}

.card-title {
  font-size: 36rpx;
  font-weight: 600;
}

.small-muted {
  font-size: 24rpx;
  color: #999;
  display: block;
  margin-bottom: 16rpx;
}

.grid {
  display: flex;
  flex-wrap: wrap;
  margin-top: 16rpx;
}

.grid-item {
  width: 25%;
  padding: 24rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.grid-emoji {
  font-size: 48rpx;
  line-height: 1;
}

.grid-label {
  font-size: 24rpx;
  color: #333;
  margin-top: 8rpx;
}

.btn {
  margin-top: 12rpx;
}
